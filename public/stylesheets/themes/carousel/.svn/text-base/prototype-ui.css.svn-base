/* Horizontal Carousel */
#horizontal_carousel_container {
  float:left;
  width: 610px;
  height: 290px;
  margin-bottom: 10px;
  position: relative;  
}         

#horizontal_carousel_container #horizontal_carousel {
  position: absolute;
  top: 50px;
  left: 44px;  
  width: 520px;
  height: 240px;  
  overflow:hidden;
}            

#left_button {
  position: absolute;
  top: 50px;
  left: 10px;
  width: 32px;
  height: 175px;
  background: url(prototype-ui/horizontal/left.png);
  z-index: 100;
  cursor:pointer;
}        

#left_button.over {
  background: url(prototype-ui/horizontal/left_over.png);
}

#left_button.disabled {
  background: url(prototype-ui/horizontal/left_disabled.png);
  cursor:default;
}

#right_button {
  position: absolute;
  top: 50px;
  right: 10px;
  width: 32px;
  height: 175px;
  background: url(prototype-ui/horizontal/right.png);
  z-index: 100;
  cursor:pointer;
}   

#right_button.over {
  background: url(prototype-ui/horizontal/right_over.png);
}

#right_button.disabled {
  background: url(prototype-ui/horizontal/right_disabled.png);
  cursor:default;
}

.ui_horizontal_carousel li {
  width: 260px;
  height: 240px;     
  text-align:center;
}


